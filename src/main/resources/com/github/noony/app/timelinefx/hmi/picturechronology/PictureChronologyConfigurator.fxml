<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="configuratorRoot" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.noony.app.timelinefx.hmi.PicturesChronologyConfiguratorController">
   <children>
      <VBox layoutX="100.0" spacing="8.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
         <children>
            <HBox spacing="8.0" VBox.vgrow="NEVER">
               <children>
                  <Label maxHeight="1.7976931348623157E308" text="Zoom" />
                  <Button minWidth="25.0" mnemonicParsing="false" onAction="#handleZoomOut" text="-" HBox.hgrow="NEVER" />
                  <Button minWidth="25.0" mnemonicParsing="false" onAction="#handleZoomIn" text="+" HBox.hgrow="NEVER" />
                  <Label maxHeight="1.7976931348623157E308" text="Level:" />
                  <TextField fx:id="zoomField" minWidth="50.0" HBox.hgrow="SOMETIMES" />
               </children>
            </HBox>
            <HBox maxWidth="1.7976931348623157E308" spacing="8.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" text="Width:" textAlignment="CENTER" HBox.hgrow="NEVER" />
                  <TextField fx:id="widthField" maxWidth="1.7976931348623157E308" prefWidth="50.0" HBox.hgrow="SOMETIMES" />
                  <Label alignment="CENTER" maxHeight="1.7976931348623157E308" text="Height:" textAlignment="CENTER" HBox.hgrow="NEVER" />
                  <TextField fx:id="heightField" maxWidth="1.7976931348623157E308" prefWidth="50.0" HBox.hgrow="SOMETIMES" />
               </children>
            </HBox>
            <CheckBox fx:id="picturesVisibilityCB" mnemonicParsing="false" text="Show Pictures" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleOnSaveAsPic" text="Save As Pic" />
         </children>
      </VBox>
   </children>
</AnchorPane>
